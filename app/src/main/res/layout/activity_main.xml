<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:stackFromBottom="true"
    android:transcriptMode="alwaysScroll"
    tools:context="com.example.android.quiz.MainActivity">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vraag 1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="What is the name of The Netherlands in dutch?"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/answerText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Put your awnser here"
                android:textSize="12sp" />

            <Button
                android:id="@+id/answerButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="answerButton1"
                android:text="Check answer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vraag 2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="What is the name of The Netherlands in dutch?"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/answerText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Put your awnser here"
                android:textSize="12sp" />

            <Button
                android:id="@+id/answerButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="answerButton2"
                android:text="Check answer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vraag 3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="What is the name of The Netherlands in dutch?"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/answerText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Put your awnser here"
                android:textSize="12sp" />

            <Button
                android:id="@+id/answerButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="answerButton3"
                android:text="Check answer" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>